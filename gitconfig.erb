[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	st = status -sb
	co = checkout
	ci = commit
	br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%%an>%Creset' --abbrev-commit --date=relative
	undo = reset --soft HEAD^
  count = shortlog -sn
  current-branch = rev-parse --abbrev-ref HEAD
  reset-origin = "!f() { git fetch; git reset --hard origin/$(git current-branch); }; f"
[core]
  editor = emacs -q
  excludesfile = /home/arturo/.gitignore_global
  commentchar = $
	ignorecase = false

[merge]
	tool = meld

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
	default = simple

[remote "origin"]
	push = HEAD

[branch]
	autosetupmerge = true
